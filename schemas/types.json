{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Settings for the virtual network building block",
    "id": "https://raw.githubusercontent.com/mspnp/template-building-blocks/spikes/spikes/nodejs-spike/schemas/types.json#",
    "definitions": {
        "cidr": {
            "type": "string",
            "description": "IP Addresses in CIDR Notation",
            "pattern": "^(?:([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.)(?:([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.)(?:([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.)([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(?:\/([0-9]|[1-2][0-9]|3[0-2]))$"
        },
        "ipAddress": {
            "type": "string",
            "pattern": "^(?:([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.)(?:([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.)(?:([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.)(?:[0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
        },
        "guid": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        },
        "resourceId": {
            "type": "string",
            "pattern": "^(?:\\/subscriptions\\/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}\\/resourceGroups\\/[a-zA-Z0-9\\._-]+\\/providers\\/[a-zA-Z]+\\.[a-zA-Z]+\\/[a-zA-Z]+\\/[a-zA-Z0-9\\._-]+(?:\\/[a-zA-Z]+\\/[a-zA-Z0-9\\._-]+)?)$"
        },
        "resourceReference": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "subscriptionId": {
                    "$ref": "#/definitions/guid"
                },
                "resourceGroupName": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        },
        "keyVaultReference": {
            "type": "object",
            "properties": {
                "reference": {
                    "properties": {
                        "keyVault": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                }
                            }
                        },
                        "secretName": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "tags": {
            "type": "object",
            "minProperties": 0,
            "maxProperties": 15,
            "additionalProperties": false,
            "patternProperties": {
                "^[a-zA-Z0-9]{1,512}$": {
                    "type": "string",
                    "minLength": 0,
                    "maxLength": 256
                }
            },
            "default": {}
        },
        "ipAllocationMethod": {
            "type": "string",
            "enum": [
                "Dynamic",
                "Static"
            ]
        },
        "bgpSettings": {
            "type": "object",
            "properties": {
                "asn": {
                    "type": "integer"
                },
                "bgpPeeringAddress": {
                    "type": "string",
                    "minLength": 1
                },
                "peerWeight": {
                    "type": "integer"
                }
            }
        },
        "baseResource": {
            "properties": {
                "name": {
                    "type": "string"
                }
            }
        },
        "resource": {
            "allOf": [
                {
                    "$ref": "#/definitions/baseResource"
                },
                {
                    "properties": {
                        "tags": {
                            "$ref": "#/definitions/tags"
                        }
                    }
                }
            ]
        },
        "subResource": {
            "allOf":[
                {
                    "$ref": "#/definitions/baseResource"
                }
            ]
        }
    }
}