{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/mspnp/template-building-blocks/spikes/spikes/nodejs-spike/schemas/extensions/windows/jsonADDomainExtension.json#",
    "type": "object",
    "properties": {
        "publisher": {
            "type": "string",
            "enum": [
                "Microsoft.Compute"
            ]
        },
        "type": {
            "type": "string",
            "enum": [
                "JsonADDomainExtension"
            ]
        },
        "typeHandlerVersion": {
            "type": "string",
            "enum": [
                "1.3"
            ]
        },
        "settings": {
            "type": "object",
            "properties": {
                "Name": {
                    "type": "string"
                },
                "User": {
                    "type": "string"
                },
                "UnjoinDomainUser": {
                    "type": "string"
                },
                "Options": {
                    "type": "integer"
                },
                "OUPath": {
                    "type": "string"
                },
                "Restart": {
                    "type": "boolean"
                },
                "NumberOfRetries": {
                    "type": "integer"
                },
                "RetryIntervalInMilliseconds": {
                    "type": "integer"
                }
            },
            "required": [
                "Name",
                "User",
                "Options",
                "OUPath",
                "Restart"
            ]
        },
        "protectedSettings": {
            "type": "object",
            "properties": {
                "Password": {
                    "type": "string"
                },
                "UnjoinDomainPassword": {
                    "type": "string"
                }
            },
            "required": [
                "Password"
            ]
        }
    }
}